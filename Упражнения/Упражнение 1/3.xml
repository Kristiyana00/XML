<?xml version="1.0"?>
<!-- Задача 3: По дадената по-долу схема съставете xml файл-->
<!-- Създаваме root елемент bookstore.-->
<bookstore>
    <!-- Създаваме поделемент book на root елемента с атрибут category.-->
    <!-- Категорията не е опомената в условието => оставяме празен низ-->
    <book category="">
        <!-- Създаваме поделемент title, който отговаря за заглавието на книгата.-->
        <!-- Елементът title има атрибут lang, който отговаря за езика, на който е написана книгата.-->
        <!-- Езикът не е опоменат в условието => оставяме празен низ-->
        <title lang="en">Everyday Italian</title>
        <!-- Създаваме поделемент author, който отговаря за автора на книгата.-->
        <author>Giada De Laurentiis</author>
        <!-- Създаваме поделемент year, който отговаря за годината на написване на книгата.-->
        <year>2005</year>
        <!-- Създаваме поделемент price, който отговаря за цената на книгата.-->
        <price>30.00</price>
    </book> <!-- Затварящ таг на елемента book.-->
</bookstore> <!-- Затварящ таг на root елемента bookstore.-->